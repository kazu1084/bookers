<p id="notice"><%= flash[:destroy] %></p>
<div class="book-wrap">
<h1>Books</h1>
<table>
<tr>
<thead>
<th><h3>Title</h3><th><h3>Body</h3></th><th><span></span></th>
</thead>
<tbody>
<% @books.each do |book|  %>
<td><span><%= book.title %></span></td>
<td><span><%= book.body %></span></td>
<td><%= link_to "Show", show_book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
</tbody>
<% end %>
</tr>
</table>

<div class="form-books">
<h2>New book</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@book.errors.count,"error") %>prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<%= form_with model: @book,url:'/books', method: :post do |f| %>
<div class="form-book">
  <div class="form-field">
<%= f.label :title %>
<%= f.text_field:title %>
  </div>
</div>
<div class="form-book">
  <div class="form-field">
<%= f.label :body %>
<%= f.text_area:body %>
  </div>
</div>
<div class="create">
<%= f.submit 'Create Book' %>
<% end %>
</div>
</div>